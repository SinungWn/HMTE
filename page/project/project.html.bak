    <script src="../../js/pages/project.js"></script>

    <script>
    // â”€â”€ SCROLL ANIMATION ENGINE â”€â”€
    (function () {
      // Observer untuk elemen statis (heading, divider, page header)
      function observeStatic() {
        var els = document.querySelectorAll('.reveal-up, .reveal-left, .reveal-divider');
        if (!els.length) return;
        var obs = new IntersectionObserver(function(entries) {
          entries.forEach(function(e) {
            if (e.isIntersecting) {
              e.target.classList.add('is-visible');
              obs.unobserve(e.target);
            }
          });
        }, { threshold: 0.1, rootMargin: '0px 0px -40px 0px' });
        els.forEach(function(el) { obs.observe(el); });
      }

      // Observer untuk card yang di-inject JS â€” pakai MutationObserver
      // agar animasi tetap jalan meski card dimuat setelah DOM ready
      function observeCards(containerId) {
        var container = document.getElementById(containerId);
        if (!container) return;

        function applyReveal(root) {
          var cards = root.querySelectorAll('.project-card:not(.reveal-card)');
          cards.forEach(function(card, i) {
            card.classList.add('reveal-card');
            card.style.transitionDelay = (i * 0.08) + 's';
          });

          // Observe card baru
          var toObserve = root.querySelectorAll('.reveal-card:not([data-observed])');
          toObserve.forEach(function(card) {
            card.setAttribute('data-observed', '1');
            cardObs.observe(card);
          });
        }

        var cardObs = new IntersectionObserver(function(entries) {
          entries.forEach(function(e) {
            if (e.isIntersecting) {
              e.target.classList.add('is-visible');
              cardObs.unobserve(e.target);
            }
          });
        }, { threshold: 0.08, rootMargin: '0px 0px -30px 0px' });

        // Cek tiap 200ms sampai container berisi card (karena inject async)
        var tries = 0;
        var poll = setInterval(function() {
          tries++;
          if (container.querySelector('.project-card') || tries > 50) {
            clearInterval(poll);
            applyReveal(container);
          }
        }, 200);

        // Fallback: MutationObserver untuk inject yg sangat lambat
        var mo = new MutationObserver(function() {
          applyReveal(container);
        });
        mo.observe(container, { childList: true, subtree: true });
      }

      // Jalankan setelah DOM siap
      document.addEventListener('DOMContentLoaded', function() {
        observeStatic();
        observeCards('ongoing-projects-container');
        observeCards('upcoming-projects-container');
        observeCards('completed-projects-container');
      });
    })();
    </script>
  </body>
